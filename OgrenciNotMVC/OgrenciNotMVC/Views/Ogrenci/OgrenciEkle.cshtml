@model OgrenciNotMVC.Models.EntitiyFramework.TblOgrenciler
@{
    ViewBag.Title = "OgrenciEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>Öğrenci Adı</label>
        <input type="text" class="form-control" name="OgrAd" />
    </div>
    <div style="margin-top:10px">
        <label>Öğrenci Soyadı</label>
        <input type="text" class="form-control" name="OgrSoyad" />
    </div>
    <div style="margin-top:10px">
        <label>Öğrenci Fotoğrafı</label>
        <input type="text" class="form-control" name="OgrFotograf" />
    </div>
    <div style="margin-top:10px">
        <label>Öğrenci Cinsiyeti</label>
        <input type="text" class="form-control" name="OgrCinsiyet" />
    </div>
    <div style="margin-top:10px">
        <label>Öğrenci Kulübü</label>
        @Html.DropDownListFor(x => x.TblKulupler.KulupID, (List<SelectListItem>)ViewBag.deger,
       new { @class = "form-control" })
    </div>
    <div style="margin-top:10px">
        <button class="btn btn-primary">Öğrenci Ekle</button>
    </div>
</form>
