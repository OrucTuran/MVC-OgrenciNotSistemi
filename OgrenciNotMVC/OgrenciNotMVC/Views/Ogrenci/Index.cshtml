@using OgrenciNotMVC.Models.EntitiyFramework
@model List<TblOgrenciler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>Öğrenci ID</th>
        <th>Öğrenci Ad</th>
        <th>Öğrenci SoyAd</th>
        <th>Öğrenci Kulüp</th>
        <th>Öğrenci Cinsiyet</th>
        <th>İşlemler</th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OgrenciID</td>
                <td>@item.OgrAd</td>
                <td>@item.OgrSoyad</td>
                <td>@item.TblKulupler.KulupAd</td>
                <td>@item.OgrCinsiyet</td>
                <td>
                    <a href="/Ogrenci/Sil/@item.OgrenciID" class="btn btn-danger">Sil</a>
                    <a href="/Ogrenci/OgrenciGetir/@item.OgrenciID" class="btn btn-success" style="margin-left:15px">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Ogrenci/OgrenciEkle/" class="btn btn-primary">Yeni Öğrenci Kaydı</a>