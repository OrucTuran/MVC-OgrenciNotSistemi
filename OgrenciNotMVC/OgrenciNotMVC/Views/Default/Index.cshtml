@using OgrenciNotMVC.Models.EntitiyFramework
@model List<TblDersler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Ders ID</th>
        <th>Ders Adı</th>
        <th>İşlemler</th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DersID.ToString()</td>
                <td>@item.DersAd.ToString()</td>
                <td>
                    <a href="/Default/Sil/@item.DersID"class="btn btn-danger">Sil</a>
                    <a href="/Default/Sil/@item.DersID"class="btn btn-success"style="margin-left:15px">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Default/YeniDers/" class="btn btn-primary">Yeni Ders Kaydı</a>

