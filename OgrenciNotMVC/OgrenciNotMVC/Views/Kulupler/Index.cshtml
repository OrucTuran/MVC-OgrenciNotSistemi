@using OgrenciNotMVC.Models.EntitiyFramework
@model List<TblKulupler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Kulüp ID</th>
        <th>Kulüp Adı</th>
        <th>Kulüp Kontenjen</th>
        <th>İşlemler</th>
    </tr>
    <tbody>
        @foreach (var kulup in Model)
        {
            <tr>
                <td>@kulup.KulupID.ToString()</td>
                <td>@kulup.KulupAd.ToString()</td>
                <td>@kulup.KulupKontenjan.ToString()</td>
                <td>
                    <a href="/Kulupler/Sil/@kulup.KulupID" class="btn btn-danger">Sil</a>
                    <a href="/Kulupler/Sil/@kulup.KulupID" style="margin-left:15px" class="btn btn-success">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Kulupler/YeniKulup/" class="btn btn-primary">Yeni Kulüp Kaydı</a>

